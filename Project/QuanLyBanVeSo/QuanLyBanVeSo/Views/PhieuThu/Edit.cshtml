

@model Model.EF.PHIEUTHU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cập Nhật Phiếu Thu</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập Thông Tin Phiếu Thu
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "PhieuThu", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.MAPT, htmlAttributes: new { @class = "control-label col-md-3" })

                                @Html.TextBoxFor(model => model.MAPT, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.MAPT, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MADL, htmlAttributes: new { @class = "control-label col-md-3" })

                                @Html.DropDownListFor(model=>model.MADL, null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MADL, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NGAY, htmlAttributes: new { @class = "control-label col-md-3" })

                                @Html.TextBoxFor(model => model.NGAY, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NGAY, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TIEN, htmlAttributes: new { @class = "control-label col-md-3" })

                                @Html.TextBoxFor(model => model.TIEN, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TIEN, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TINHTRANG, htmlAttributes: new { @class = "control-label col-md-3" })

                                @Html.TextBoxFor(model => model.TINHTRANG, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TINHTRANG, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập Nhật" class="btn btn-default" />
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Quay Về Danh Sách", "Index")
</div>

