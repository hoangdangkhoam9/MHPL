@model PagedList.IPagedList<Model.EF.CONGNO>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh Sách Công nợ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <!--------------------------------------------- Search And Add ------------------------------------------------->
                    <div class="form-group">
                        <a href="/CongNo"><button type="submit" class="btn btn-primary">Làm Mới</button></a>
                    </div>
                    <!------------------------------------------- Loading Edit Delete ----------------------------------------------->
                    <thead>
                        <tr>
                            <th>Mã Đại Lý</th>
                            <th>Tên Đại Lý</th>
                            <th>Công nợ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="row_@item.daily.MADL">
                            <td> @item.daily.MADL</td>
                            <td> @item.daily.TEN</td>
                            <td> @item.congno</td>
                        </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>