@model PagedList.IPagedList<Model.EF.PHIEUCHI>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh Sách Phiếu Chi</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <!--------------------------------------------- Search And Add ------------------------------------------------->
                    <div class="form-group">
                        @using (Html.BeginForm("Index", "PhieuChi", FormMethod.Get))
                        {
                            <label>Nhập Mã Phiếu Chi:</label>
                            <input type="text" , name="searchString">
                            <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                        }
                        <a href="/PhieuChi"><button type="submit" class="btn btn-primary">Làm Mới</button></a>
                        <a href="/PhieuChi/Create"><button type="button" class="btn btn-warning">Thêm Mới</button></a>
                    </div>
                    <!------------------------------------------- Loading Edit Delete ----------------------------------------------->
                    <thead>
                        <tr>
                            <th>Mã Phiếu Chi</th>
                            <th>Ngày</th>
                            <th>Số Tiền</th>
                            <th>Tình Trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.MAPC">
                                <td> @item.MAPC</td>                               
                                <td> @item.NGAY</td>
                                <td> @item.TIEN</td>
                                <td>@item.TINHTRANG</td>
                                <td>
                                    <a href="/PhieuChi/Edit/@item.MAPC"><button type="button" class="btn btn-primary">Sửa</button></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>